<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white">


    <LinearLayout
        android:id="@+id/constraintLayout13"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:paddingBottom="45dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingHorizontal="16dp"
            android:paddingBottom="16dp">

            <TextView
                android:id="@+id/txtKeypad"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/grayLight"
                android:padding="4dp"
                android:textColor="@color/black"
                android:textSize="32sp"
                app:layout_constraintBottom_toBottomOf="@id/constraintLayout13"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/btnBackSpace"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_marginStart="8dp"
                android:src="@drawable/ic_backspace_24" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_1"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="1"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_2"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="2"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_3"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="3"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_4"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="4"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_5"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="5"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_6"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="6"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp"
            tools:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_7"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="7"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_8"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="8"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/NUMBER_9"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:background="@drawable/bg_full_rounded"
                    android:backgroundTint="@color/accent"
                    android:gravity="center"
                    android:scaleType="centerInside"
                    android:text="9"
                    android:textColor="@color/white"
                    android:textSize="40sp"
                    android:tint="@color/white"
                    android:tintMode="src_in"
                    app:srcCompat="@drawable/ic_volume_2" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layoutHangUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingTop="20dp"
            tools:visibility="visible">

            <TextView
                android:id="@+id/NUMBER_0"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/bg_full_rounded"
                android:backgroundTint="@color/accent"
                android:elevation="3dp"
                android:gravity="center"
                android:scaleType="centerInside"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="40sp"
                android:tint="@color/white"
                android:tintMode="src_in"
                app:srcCompat="@drawable/ic_phone_off" />

        </LinearLayout>


    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>